{% extends 'base.html.twig' %}

{% block title %}Feature - Admin{% endblock %}

{% block body %}

    <header class="header">

        {% include 'components/_navigation.html.twig' %}

    </header>

    <main class="main">

        <section class="section">

            <h2>Features</h2>

            <table class="table">
                <thead>
                <tr>
                    <th>Feature</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                {% for feature in features %}
                    <tr>

                        <td>
                            {{ feature.title }}
                        </td>

                        <td>
                            <a href="{{ path('app_feature_edit', {'id': feature.id}) }}">
                                Edit
                            </a>

                            <form class="delete" method="post" action="{{ path('app_feature_delete', {'id': feature.id}) }}" onsubmit="return confirm('Are you sure you want to delete this feature?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feature.id) }}">
                                <button>Delete</button>
                            </form>
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

        </section>

        <a href="{{ path('app_feature_new') }}">Create new feature</a>

    </main>

{% endblock %}
